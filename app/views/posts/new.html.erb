<h1>New Post</h1>

<div class="well new-post-resize">
   <% if @post.errors.any? %>
    <ul class="error-message">
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %> 

  <!-- Using simple form gem to shorten form -->
  <%= form_for @post, html: {multipart: true} do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <%#= f.input :title, input_html: {placeholder: "Name of post"} %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control", rows:"5" %>
    </div>
    <%#= f.input :body, hint: "Put details for the body"  %>
    <div class="form-group">
      <%= f.collection_check_boxes :tag_ids, Tag.order(:name), :id, :name%>
    </div>
    <div class="form-group">
      <%= f.file_field :image%>
    </div>
   <!--  </div>
    <%#= f.association :tags, as: :check_boxes %> 
    <div> -->
      <br>
      <%#= f.submit class: "btn btn-success" %>
      <%= f.submit :submit, class: "btn btn-success"%>
    </div> 
  <% end %>
</div>
